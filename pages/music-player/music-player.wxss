/* pages/music-player/music-player.wxss */
page {
  color: #fff;
  font-size: 28rpx;
}

.bg-image {
  position: fixed;
  z-index: -1;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
}

.cover {
  position: fixed;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.3);
  backdrop-filter: blur(20px);
}

.allTitle {
  display: flex;
}

.allTitle .line {
  margin: 0 5rpx;
}

.allTitle .active {
  color: #fff;
}

.swiper .swiper-item {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 40rpx 60rpx;
}

.swiper .swiper-item .album {
  flex: 5;
}

.swiper .swiper-item .info,
.swiper .swiper-item .lyric,
.swiper .swiper-item .progress,
.swiper .swiper-item .controls {
  flex: 1;
}


.swiper .swiper-item .image {
  height: 270rpx;
  width: 100%;
  border-radius: 12rpx;
}

.swiper .swiper-item .info {
  margin-top: 20rpx;
}

.swiper .swiper-item .info .singName {
  font-size: 48rpx;
  font-weight: 700;
}

.swiper .swiper-item .info .author {
  margin-top: 10rpx;
}

.swiper .swiper-item .lyric {
  text-align: center;
  margin: 16rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.swiper .swiper-item .progress {
  margin: 12rpx 0;
}

.swiper .swiper-item .progress .slider {
  margin: 16rpx 8rpx 10rpx 18rpx;
}

.swiper .swiper-item .progress .time {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.swiper .swiper-item .controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 12rpx 0;
}

.swiper .swiper-item .controls .btn {
  width: 60rpx;
  height: 60rpx;
}

.swiper .swiper-item .controls .mode {
  width: 80rpx;
  height: 80rpx;
}

.swiper .swiper-item .controls .play {
  width: 140rpx;
  height: 140rpx;
}

.swiper .lyric-list {
  width: 100%;
  height: 100%;
  padding: 40rpx;
  text-align: center;
  box-sizing: border-box;
}

.swiper .lyric-list ::-webkit-scrollbar {
  display: none;
}

.swiper .lyric-list .item {
  height: 35px;
  line-height: 35px;
}

.swiper .lyric-list .item.active {
  color: #5beb99;
  font-size: 32rpx;
}



