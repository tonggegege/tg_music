/* components/menu-header/menu-header.wxss */
.content {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 450rpx;
  color: #fff;
}

.content .image {
  position: absolute;
  z-index: -2;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.content .bg-cover {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(5px);
}

.content .top {
  display: flex;
  margin: 60rpx 50rpx 0 50rpx;
  overflow: hidden;
}

.content .top .top-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
}

.content .top .info {
  height: 220rpx;
  flex: 1;
  margin-left: 50rpx;
  overflow: hidden;
}

.content .top .info .title {
  font-size: 32rpx;
  margin: 0 !important;
}

.content .top .anthor {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.content .top .anthor .anthor-image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}

.content .top .anthor .nickname {
  font-size: 24rpx;
  margin-left: 18rpx;
}

.content .top .desc {
  width: 100%;
  margin-top: 30rpx;
  font-size: 24rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.content .bottom {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  margin-top: 30rpx;
}

.content .bottom .item {
  display: flex;
  align-items: center;
}

.content .bottom .item .icon {
  width: 48rpx;
  margin-right: 10rpx;
}

.content .bottom .item .text {
  font-size: 28rpx;
}