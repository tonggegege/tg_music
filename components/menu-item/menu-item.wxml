<!--components/menu-item/menu-item.wxml-->

<view class="menu-item" bindtap="onMenuItemClick">
  <view class="top">
    <image mode="widthFix" class="image" src="{{ itemData.coverImgUrl }}"></image>
    <view class="count">{{ format.formatCount(itemData.playCount) }}</view>
  </view>

  <view class="bottom">
    {{ itemData.description }}
  </view>
</view>
