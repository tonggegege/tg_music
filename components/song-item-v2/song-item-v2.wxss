/* components/song-item-v2/song-item-v2.wxss */


.item {
  display: flex;
  align-items: center;
  margin: 36rpx 0;
  padding: 0 20rpx;
}

.item .index {
  font-size: 30rpx;
  padding: 12rpx;
}

.item .info {
  flex: 1;
  margin-left: 16rpx;
  overflow: hidden;
}

.item .info .title{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  
}

.item .source {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  
}

.item .image {
  width: 38rpx;
  height: 22rpx;
  margin-right: 10rpx;
}